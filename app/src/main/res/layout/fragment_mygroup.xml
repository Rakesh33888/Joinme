<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screenbg"
    tools:context="com.example.bts.joinme.Mygroup">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#6e080000"
        android:orientation="horizontal"
        android:id="@+id/linearlayout_group">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:background="@drawable/backbtn"
            android:layout_marginLeft="15dp"
            android:id="@+id/button9"
            android:layout_gravity="left|center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Group Activity"
            android:textColor="#c5fdfdfd"
            android:textSize="15dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/textView8"/>

    </LinearLayout>

    <Button
        android:layout_width="155dp"
        android:layout_height="161dp"
        android:background="@drawable/createalbum"
        android:id="@+id/button8"
        android:layout_marginTop="60dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="right"/>
    <RelativeLayout
        android:layout_width="168dp"
        android:layout_height="161dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/relativelayout_group">

        <ImageView
            android:layout_width="161dp"
            android:layout_height="110dp"
            android:id="@+id/imageView3"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:textColor="#fff"
            android:background="@drawable/imageinfo"
            android:id="@+id/textView9"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_below="@+id/imageView3" />

    </RelativeLayout>



</FrameLayout>
