<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen2bg"
    tools:context="com.example.bts.joinme.MainActivity">


    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/joinme"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="79dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up with"
        android:textSize="23dp"
        android:textColor="#FDFCFE"
        android:id="@+id/textView2"
        android:layout_marginBottom="141dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:background="@drawable/memberbg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="Already a Member"
            android:textColor="#f1e4e4e4"
            android:textSize="17sp"
            android:gravity="center"
            android:id="@+id/btn3"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewarrow"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/arrowright"
            android:layout_gravity="center" />

    </FrameLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/facebook"
        android:id="@+id/button"
        android:layout_marginTop="45dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mail"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_alignStart="@+id/textView2" />

</RelativeLayout>
