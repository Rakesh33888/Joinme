<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbd7d8"
    tools:context="com.example.bts.joinme.Mysearch">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/box"
        android:orientation="horizontal"
        android:id="@+id/linearlayout">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:background="@drawable/grayback"
            android:layout_marginLeft="15dp"
            android:id="@+id/button7"
            android:layout_gravity="left|center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My search Preferences"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView6"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="296dp"
        android:layout_height="96dp"
        android:background="@drawable/box"
        android:id="@+id/relativelayout_seek"
        android:layout_marginTop="65dp"
        android:layout_gravity="center_horizontal|top">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="296dp"
        android:layout_height="150dp"
        android:background="@drawable/bigbox"
        android:id="@+id/relativelayout_checkbox"
        android:gravity="center_horizontal|left"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="33dp"

        >


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Any"
            android:layout_marginLeft="10dp"
            android:id="@+id/checkBox"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Only Today"
            android:layout_marginLeft="10dp"
            android:id="@+id/checkBox2"
            android:layout_below="@+id/checkBox"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 days"
            android:layout_marginLeft="10dp"
            android:id="@+id/checkBox3"
            android:layout_below="@+id/checkBox2"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick a date"
            android:paddingLeft="7dp"
            android:textSize="22sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</FrameLayout>
